<!-- Define a function to render each sleeplog -->
<% function renderSleeplog(sleeplog) { %>
    <div class="item-preview">
      <a href="/single-sleeplog/<%= sleeplog._id %>">
        <h2>HoursSlept: <%= sleeplog.hoursSlept %></h2>
        <p>Written by Sunitha</p>
      </a>
    </div>
    <% } %>
    
    <!DOCTYPE html>
    <html lang="en">
      <!-- Pass a JavaScript variable to a partial in EJS -->
      <%- include('partials/head.ejs', { title: "Home page" }) %>
    
      <body>
        <%- include('partials/navbar') %>
    
        <div class="content">
          <div class="home">
            <div class="item-list">
              <% if (sleeplog.length > 0) { %>
              <!-- Call the renderSleeplog function for each sleeplog -->
              <% sleeplog.forEach(renderSleeplog); %> <% } else { %>
              <p>No sleeplog found.</p>
              <% } %>
            </div>
          </div>
        </div>
    
        <%- include('partials/footer') %>
      </body>
    </html>