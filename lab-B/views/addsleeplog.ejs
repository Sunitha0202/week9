<!-- addsleeplog.ejs -->
<!DOCTYPE html>
<html lang="en">
  <!-- Pass a JavaScript variable to a partial in EJS -->
  <%- include('partials/head.ejs', { title: "Add Sleeplog" }) %>

  <body>
    <%- include('partials/navbar') %>

    <div class="content">
      <div class="create">
        <h2>Add a New Sleeplog</h2>
        <form action="/addSleeplog" method="POST">
          <label>Date:</label
          ><input type="date" value="" id="date" name="date" required />

          

          <label for="hoursSlept">HoursSlept:</label>
          <input type="number" id="hoursSlept" name="hoursSlept" required /><br />

          <label for="quality">Quality:</label>
          <input type="number" id="quality" name="quality" required /><br />


          <label for="comments">Comments:</label>
          <input type="text" id="comments" name="comments" required /><br />
          
          <button type="submit">Add Sleeplog</button>
        </form>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>